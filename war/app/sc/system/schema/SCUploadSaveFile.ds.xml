<DataSource
    ID="SCUploadSaveFile"
    serverConstructor="com.isomorphic.datasource.SCUploadSaveFileDataSource"
    addGlobalId="false"
>
    <fields>
    	<field name="path" primaryKey="true" hidden="true" />
		<field name="file" type="binary" />
    	<field name="file_dir" hidden="true" />
    </fields>
    
    <operationBindings>
	    <binding operationType="custom" operationId="checkUploadFeature" />
    </operationBindings>
</DataSource>
