<DataSource	ID="StaticTextItem" inheritsFrom="FormItem" Constructor="StaticTextItem">
	<fields>
		<field name="wrap"		type="boolean" title="Allow text wrap" defaultValue="true"/>
        <field name="clipValue" type="boolean"/>
		<field name="outputAsHTML"	type="boolean" title="Output as HTML" visibility="internal"/>
		<field name="required"      type="boolean" title="Required" inapplicable="true"/>
   		<field name="disabled" 			type="boolean" title="Disable" inapplicable="true"/>
		<field name="redrawOnChange" 	type="boolean" title="Redraw On Change" inapplicable="true"/>
		<field name="validators"		type="Validator"	multiple="true"	title="Validators" 
               inapplicable="true"/>
		<field name="validateOnChange" 	type="boolean" title="Validate On Change" inapplicable="true"/>
        
	</fields>
	
    <substituteClasses>BlurbItem, TextItem, TextAreaItem</substituteClasses>
	
</DataSource>
