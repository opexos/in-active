<DataSource	ID="SectionStack" inheritsFrom="VLayout" Constructor="SectionStack">
	<fields>
		<field name="sectionHeaderClass"    type="string"/>
		<field name="headerHeight"    type="positiveInteger"/>
		<field name="canTabToHeaders"    type="boolean"/>
		<field name="canResizeSections"  type="boolean"/>
		<field name="scrollSectionIntoView"  type="boolean"/>
		<field name="sections"         type="SectionStackSection" multiple="true" propertiesOnly="true"/>
		<field name="visibilityMode" type="enum">
			<valueMap>
				<value>mutex</value>
				<value>multiple</value> 
			</valueMap>
		</field>	
        <!-- mark superclass fields as not relevant -->
        <field name="children" inapplicable="true"/>
        <field name="peers" inapplicable="true"/>
        <field name="members" inapplicable="true"/>
        
        <field name="animateSections" type="boolean"/>
	</fields>
</DataSource>
